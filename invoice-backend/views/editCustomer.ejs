<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 col-sm-8 col-lg-12 m-auto">
            <%- include ./partials/message%>
                <h3><b>Edit Customer </b></h3>
                <hr>
                <form action="/app/details/edit/customer/<%=customer._id%>" method="post">
                    <div class="form-group">
                        <label for="">Name* : </label>
                        <input type="text" value="<%=customer.name%>" name="name" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">Phone* : </label>
                        <input type="number" value="<%=customer.contact%>" name="contact" required class="form-control" minlength="10" maxlength="10">
                    </div>
                    <div class="form-group">
                        <label for="">Email : </label>
                        <input type="email" value="<%=customer.email%>" name="email" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="">Address : </label>
                        <input type="text" value="<%=customer.address%>" name="address" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Submit">
                    </div>
                </form>
        </div>
    </div>
</div>