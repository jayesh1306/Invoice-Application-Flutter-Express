<div class="container mt-2">
    <div class="row">
        <div class="col-md-8 col-sm-6 col-lg-12 m-auto">
            <%- include ./partials/message%>
                <%if(invoice.invoice.length == 0){%>
                    <h2>No Invoices created. Create from <a href="/app/create">here</a></h2>
                    <%}else{%>
                        <%for(var i=0;i< invoice.invoice.length;i++){%>
                            <table class="table" style="display: block;overflow-x: auto;">
                                <thead>
                                    <tr class="text-center">
                                        <th>#</th>
                                        <th>Particulars</th>
                                        <th>Date</th>
                                        <th>Quantity</th>
                                        <th>Rate</th>
                                        <th>Challan</th>
                                        <th>Delete</th>
                                        <th>Edit</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%for(var i=0;i< invoice.invoice.length;i++){%>
                                        <tr class="text-center">
                                            <td>
                                                <%=i+1%>
                                            </td>
                                            <td>
                                                <%=invoice.invoice[i].products%>
                                            </td>
                                            <td>
                                                <%=invoice.invoice[i].date.toDateString()%>
                                            </td>
                                            <td>
                                                <%=invoice.invoice[i].quantity%>
                                            </td>
                                            <td>
                                                <%=invoice.invoice[i].rate%>
                                            </td>
                                            <%if(invoice.invoice[i].challan == null){%>
                                                <td disabled><a href="#"><i class="fa fa-picture-o"></i></a></td>
                                                <%}else{%>
                                                    <td><a href="<%=invoice.invoice[i].challan%>"><i class="fa fa-picture-o"></i></a></td>
                                                    <%}%>
                                                        <td><a href="/app/details/<%=invoice._id%>/<%=invoice.invoice[i]._id%>/delete"><i
                            class="fa fa-trash" style="color: red;"></i></a></td>
                                                        <td><a href="/app/details/<%=invoice._id%>/<%=invoice.invoice[i]._id%>/edit"><i
                                    class="fa fa-pencil" style="color: green;"></i></a></td>
                                                        <td>
                                                            <%=((invoice.invoice[i].rate * 10)*invoice.invoice[i].quantity) / 10%>\-
                                                        </td>
                                        </tr>
                                        <%}%>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td>
                                                    <h5 style="font-weight:900">Total : </h5>
                                                </td>
                                                <td>
                                                    <h5 style="font-weight:900">
                                                        <%= totalBill %> Rs /-</h5>
                                                </td>
                                            </tr>
                                </tbody>
                            </table>
                            <%}%>
                                <%}%>
        </div>
    </div>
</div>