<div class="container mt-2">
    <div class="row">
        <div class="col-md-6 m-auto">
            <%- include ./partials/message%>
            <h2>Authentication</h2>
            <hr>
            <form action="/" method="post">
                <div class="form-group">
                    <input type="number" placeholder="Enter Password" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-9">
                            <input type="submit" value="Submit" class="btn btn-primary">
                        </div>
                        <div class="col-md-3 ">
                            <small><a href="/app/forgot">Forgot Password ?</a></small>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>