<div class="container mt-2">
    <div class="row">
        <div class="col-md-6 m-auto">
            <%- include ./partials/message%>
            <h2>Change Password </h2>
            <hr>
            <form action="/app/change" method="post">
                <div class="form-group">
                    <input type="password" placeholder="Enter Password" class="form-control" name="pass1" required>
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Confirm Password" class="form-control" name="pass2" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>